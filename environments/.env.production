# VuluGO Production Environment Configuration
# This file contains production-specific environment variables

# Environment
NODE_ENV=production
EXPO_PUBLIC_ENVIRONMENT=production

# API Configuration
EXPO_PUBLIC_API_URL=https://api.vulugo.com
EXPO_PUBLIC_API_VERSION=v1

# Firebase Configuration (Production)
EXPO_PUBLIC_FIREBASE_API_KEY=your-production-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=vulugo-prod.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=vulugo-prod
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=vulugo-prod.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-production-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-production-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-production-measurement-id

# Agora Configuration (Production)
EXPO_PUBLIC_AGORA_APP_ID=your-production-agora-app-id
EXPO_PUBLIC_AGORA_APP_CERTIFICATE=your-production-agora-certificate
EXPO_PUBLIC_AGORA_CUSTOMER_ID=your-production-customer-id
EXPO_PUBLIC_AGORA_CUSTOMER_SECRET=your-production-customer-secret

# Streaming Configuration
EXPO_PUBLIC_ENABLE_VIDEO_STREAMING=true
EXPO_PUBLIC_DEFAULT_STREAM_PROFILE=HD
EXPO_PUBLIC_MAX_PARTICIPANTS_PER_STREAM=50

# Twilio Configuration (Production)
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=your-production-twilio-sid
EXPO_PUBLIC_TWILIO_API_KEY_SID=your-production-twilio-key-sid
EXPO_PUBLIC_TWILIO_API_KEY_SECRET=your-production-twilio-key-secret
EXPO_PUBLIC_TWILIO_FROM_NUMBER=your-production-twilio-number

# SMS Configuration
EXPO_PUBLIC_SMS_SERVICE=twilio
EXPO_PUBLIC_USE_MOCK_SMS=false

# Google Sign-In (Production)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-production-google-web-client-id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-production-google-ios-client-id

# Feature Flags
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_MOCK_SERVICES=false
EXPO_PUBLIC_ENABLE_TESTING_TOOLS=false
EXPO_PUBLIC_ENABLE_VERBOSE_LOGGING=false

# Security Configuration
EXPO_PUBLIC_ENABLE_RATE_LIMITING=true
EXPO_PUBLIC_ENABLE_DDOS_PROTECTION=true
EXPO_PUBLIC_ENABLE_CONTENT_FILTERING=true
EXPO_PUBLIC_ENABLE_SECURITY_AUDIT=true

# Monitoring Configuration
EXPO_PUBLIC_ENABLE_CRASHLYTICS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_LOG_LEVEL=error
EXPO_PUBLIC_ENABLE_REMOTE_LOGGING=true

# Performance Configuration
EXPO_PUBLIC_ENABLE_CODE_SPLITTING=true
EXPO_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
EXPO_PUBLIC_ENABLE_CACHING=true
EXPO_PUBLIC_CACHE_TIMEOUT=3600000
EXPO_PUBLIC_ENABLE_COMPRESSION=true

# Development Tools (Disabled in Production)
EXPO_PUBLIC_ENABLE_FLIPPER=false
EXPO_PUBLIC_ENABLE_REACTOTRON=false

# App Store Configuration
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/vulugo
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.vulugo

# Support Configuration
EXPO_PUBLIC_SUPPORT_EMAIL=support@vulugo.com
EXPO_PUBLIC_SUPPORT_URL=https://support.vulugo.com

# Legal Configuration
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://vulugo.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://vulugo.com/terms

# Social Media
EXPO_PUBLIC_TWITTER_URL=https://twitter.com/vulugo
EXPO_PUBLIC_INSTAGRAM_URL=https://instagram.com/vulugo
EXPO_PUBLIC_DISCORD_URL=https://discord.gg/vulugo

# CDN Configuration
EXPO_PUBLIC_CDN_URL=https://cdn.vulugo.com
EXPO_PUBLIC_ASSETS_URL=https://assets.vulugo.com

# WebSocket Configuration
EXPO_PUBLIC_WS_URL=wss://ws.vulugo.com
EXPO_PUBLIC_WS_RECONNECT_INTERVAL=5000
EXPO_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=10

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_FCM_SENDER_ID=your-production-fcm-sender-id

# Deep Linking
EXPO_PUBLIC_DEEP_LINK_SCHEME=vulugo
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=vulugo.com

# Sentry Configuration (Error Tracking)
EXPO_PUBLIC_SENTRY_DSN=your-production-sentry-dsn
EXPO_PUBLIC_SENTRY_ENVIRONMENT=production

# Analytics
EXPO_PUBLIC_MIXPANEL_TOKEN=your-production-mixpanel-token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-production-amplitude-key

# A/B Testing
EXPO_PUBLIC_OPTIMIZELY_SDK_KEY=your-production-optimizely-key

# Content Delivery
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=vulugo-production
EXPO_PUBLIC_CLOUDINARY_API_KEY=your-production-cloudinary-key

# Payment Processing (Live Mode)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-key
EXPO_PUBLIC_PAYPAL_CLIENT_ID=your-production-paypal-client-id

# Geolocation Services
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-key
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-production-mapbox-token

# Machine Learning / AI
EXPO_PUBLIC_OPENAI_API_KEY=your-production-openai-key
EXPO_PUBLIC_AZURE_COGNITIVE_KEY=your-production-azure-key

# Database Configuration
EXPO_PUBLIC_DATABASE_URL=postgresql://prod-db.vulugo.com:5432/vulugo_production
EXPO_PUBLIC_REDIS_URL=redis://prod-redis.vulugo.com:6379

# Email Service
EXPO_PUBLIC_SENDGRID_API_KEY=your-production-sendgrid-key
EXPO_PUBLIC_MAILGUN_API_KEY=your-production-mailgun-key

# File Storage
EXPO_PUBLIC_AWS_S3_BUCKET=vulugo-production-uploads
EXPO_PUBLIC_AWS_REGION=us-east-1

# Rate Limiting (More Restrictive)
EXPO_PUBLIC_RATE_LIMIT_WINDOW=900000
EXPO_PUBLIC_RATE_LIMIT_MAX_REQUESTS=50

# Session Configuration
EXPO_PUBLIC_SESSION_TIMEOUT=3600000
EXPO_PUBLIC_REFRESH_TOKEN_EXPIRY=604800000

# Maintenance Mode
EXPO_PUBLIC_MAINTENANCE_MODE=false
EXPO_PUBLIC_MAINTENANCE_MESSAGE="VuluGO is currently under maintenance. Please try again later."

# Version Information
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_MIN_SUPPORTED_VERSION=1.0.0

# Security Headers
EXPO_PUBLIC_CSP_ENABLED=true
EXPO_PUBLIC_HSTS_ENABLED=true
EXPO_PUBLIC_X_FRAME_OPTIONS=DENY
EXPO_PUBLIC_X_CONTENT_TYPE_OPTIONS=nosniff

# Backup Configuration
EXPO_PUBLIC_BACKUP_ENABLED=true
EXPO_PUBLIC_BACKUP_FREQUENCY=daily
EXPO_PUBLIC_BACKUP_RETENTION_DAYS=30

# Load Balancing
EXPO_PUBLIC_LOAD_BALANCER_URL=https://lb.vulugo.com
EXPO_PUBLIC_HEALTH_CHECK_ENDPOINT=/health

# SSL Configuration
EXPO_PUBLIC_SSL_ENABLED=true
EXPO_PUBLIC_SSL_REDIRECT=true
EXPO_PUBLIC_CERTIFICATE_AUTHORITY=letsencrypt

# Compliance
EXPO_PUBLIC_GDPR_ENABLED=true
EXPO_PUBLIC_CCPA_ENABLED=true
EXPO_PUBLIC_COPPA_ENABLED=true

# Audit Logging
EXPO_PUBLIC_AUDIT_LOGGING_ENABLED=true
EXPO_PUBLIC_AUDIT_LOG_RETENTION_DAYS=365

# Data Retention
EXPO_PUBLIC_USER_DATA_RETENTION_DAYS=2555
EXPO_PUBLIC_LOG_RETENTION_DAYS=90
EXPO_PUBLIC_ANALYTICS_RETENTION_DAYS=730

# Geographic Restrictions
EXPO_PUBLIC_GEO_BLOCKING_ENABLED=false
EXPO_PUBLIC_ALLOWED_COUNTRIES=US,CA,GB,AU,DE,FR,JP

# Content Moderation
EXPO_PUBLIC_AUTO_MODERATION_ENABLED=true
EXPO_PUBLIC_MANUAL_REVIEW_THRESHOLD=0.7
EXPO_PUBLIC_CONTENT_SCANNING_ENABLED=true

# Business Intelligence
EXPO_PUBLIC_BI_DASHBOARD_URL=https://bi.vulugo.com
EXPO_PUBLIC_REPORTING_ENABLED=true

# Third-Party Integrations
EXPO_PUBLIC_ZENDESK_ENABLED=true
EXPO_PUBLIC_INTERCOM_ENABLED=true
EXPO_PUBLIC_HOTJAR_ENABLED=true
